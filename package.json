{
  "name": "douglasmoura.dev",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n vite,tailwind -c blue,green -p \"[{name}]\" \"npm:dev:vite\" \"npm:dev:tailwind\"",
    "dev:tailwind": "tailwindcss -i ./src/input.css -o ./public/static/style.css --watch",
    "dev:wrangler": "wrangler dev src/index.tsx",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "check": "biome check --write ./src",
    "check:unsafe": "biome check --write-unsafe ./src",
    "deploy": "$npm_execpath run build && wrangler pages deploy",
    "test": "vitest",
    "db:write-index": "bun ./src/bin/index.ts"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.2.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.1",
    "minisearch": "^7.1.0",
    "nanoid": "^5.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@cloudflare/workers-types": "^4.20240529.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.15.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "concurrently": "^9.0.1",
    "tailwindcss": "^3.4.11",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.2.12",
    "vitest": "^2.1.1",
    "wrangler": "^3.78.2"
  }
}
